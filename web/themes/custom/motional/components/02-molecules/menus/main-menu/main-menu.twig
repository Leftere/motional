{{ attach_library('motional/main-menu') }}

<nav>
  <div id="main-nav" class="main-nav">
    <div class="main-nav__wrapper">
      <a href="/" class="main-nav__logo" aria-label="Motional homepage">
        {% block logo %}
          {% include '@atoms/images/icons/_icon.twig' with { icon_name: 'motional' } %}
        {% endblock %}
      </a>
      {% include "@molecules/menus/_menu.twig" with {
        menu_class: "main-menu",
        items: menu_items,
      } %}
      <div id="toggle-expand" class="toggle-expand" aria-haspopup="true" aria-expanded="false">
        <button class="toggle-expand__open">
          {% include "@atoms/images/icons/_icon.twig" with {
            icon_base_class: "icon",
            icon_blockname: "toggle-expand",
            icon_name: "menu",
          } %}
          <span class="toggle-expand__text visually-hidden">Main Menu</span>
        </button>
        <button class="toggle-expand__close">
          {% include "@atoms/images/icons/_icon.twig" with {
            icon_base_class: "icon",
            icon_blockname: "toggle-expand",
            icon_name: "close",
          } %}
          <span class="toggle-expand__text visually-hidden">Close</span>
        </button>
      </div>
    </div>
  </div>
</nav>
